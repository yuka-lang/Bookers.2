<%= render 'books/list' , user: @user , book: @book %>

 <div class='col-md-8 offset-md-1'>
  		<h2>Book detail</h2>
  		<table class="table">
  		  <tbody>
  		    <tr>
     		   <td>
      		   <%= link_to user_path(@books.id) do %>
      		      <%= attachment_image_tag @books.user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
      		     <% end %> <br>
  		       　 <%= link_to @user.name ,user_path %>
     		    </td>
      		   <td><%=link_to @books.title ,book_path %></td>
      		   <td><%= @books.body %></td>

      		   <% if @user.user_id == current_user.id %>
      		    <td><%= link_to "Edit" , edit_book_path ,class:"btn btn-success" %></td>
       		   <td>
      		        <%= link_to "Distroy", book_path(@books), method: :delete ,"data-confirm" => "本当に削除しますか？" , class:"btn btn-danger" %>
   		       </td>
   	       <% end %>
  		    </tr>
       </tbody>
     </table>
 </div>