<%= render 'books/list' , user: @user , book: @book %>

 <div class='col-md-8 offset-md-1'>
  		<h2>Book detail</h2>
  		<table class="table">
  		  <tbody>
  		    <tr>
  		       <td>
  		          <%= link_to user_path(@book.id) do %>
  		             <%= attachment_image_tag @book.user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
  		          <% end %>
  		        <br>
  		         <%= link_to @user.name ,user_path %>
  		      </td>
  		      <td><%=link_to @book.title ,book_path %></td>
  		      <td><%= @book.body %></td>
  		      <td><%= link_to "Edit" , edit_book_path ,class:"btn btn-success" %></td>
  		     <td>
  		        <%= link_to "Distroy", book_path(@book), method: :delete  , class:"btn btn-danger" %>
  		     </td>
  		    </tr>
        </tbody>
      </table>
  </div>