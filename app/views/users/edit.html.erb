<p id="notice"></p>
　<div class='container'>
  　<div class='row'>
    　<div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">


  <h2>User info</h2>
  <%= form_with model:@user, local:true do |f| %>
    <div class="form-group">
     <label for="inputName">Name</label><br>
     <input class="form-control">
    </div>

     <div class="form-group">
      <label for="inputImage">Image</label><br>
       <%= f.attachment_field :profile_image, placeholder: "progile_image" %>
     </div>

     <div class="form-group">
      <label for="inputIntroduction">Introduction</label><br>
        <%= f.text_area :introduction, autofocus: true, id:"inputIntroduction" ,class:"form-control introduction" %>
     </div>

     <div class = "form-group">
       <%= f.submit "Update User" ,class:"btn btn-secondary"  %>
     </div>
   <% end %>
